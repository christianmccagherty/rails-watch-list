<%# show all lists %>
<h1>MOVIE LISTS</h1>

<% @lists.each do |list| %>
  <%= link_to list_path(list) do %>
    <div class="card-list" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.image.key %>')">
      <%= list.name %>
    </div>
    <p><%= link_to "Delete list", list_path(list),
              data: {
                turbo_method: :delete,
                turbo_confirm: "Are you sure you want to delete the list and associated bookmarks?"
              } %></p>
  <% end %>
<% end %>
<%= link_to "Add new list", new_list_path %>


