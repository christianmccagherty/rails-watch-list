<h1><%= @list.name %></h1>

<ul>
  <% @bookmarks.each do |bookmark| %>
    <li>
      <ul>
        <li><%= bookmark.movie.title %></li>
        <li><%= bookmark.movie.overview %></li>
        <li><%= bookmark.movie.rating %></li>
        <li><%= bookmark.comment %></li>
        <li><%= link_to "Delete bookmark", bookmark_path(bookmark),
        data: {
          turbo_method: :delete,
          turbo_confirm: "Are you sure?"
        } %></li>
      </ul>
    </li>
  <% end %>
</ul>

<h3>Add a new bookmark:</h3>
<%= simple_form_for [@list, @bookmark] do |f| %>
  <%= f.input :comment %>
  <%= f.association :movie %>
  <%= f.submit %>
<% end %>

<%= link_to "Back to lists", root_path %>
